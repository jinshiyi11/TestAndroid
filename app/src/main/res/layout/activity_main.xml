<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_test_recycler_view"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_item_height"
        android:text="RecyclerView" />

    <Button
        android:id="@+id/btn_test_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_item_height"
        android:text="定位" />

    <Button
        android:id="@+id/btn_test_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_item_height"
        android:text="对话框" />

    <Button
        android:id="@+id/btn_test_scrolling_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_item_height"
        android:textAllCaps="false"
        android:text="ScrollingActivity测试" />

</LinearLayout>